@page "/usuarios/create"
@using Microsoft.EntityFrameworkCore
@using FinanceControl.UI.Domain.Entities
@inject IDbContextFactory<FinanceControl.UI.Infrastructure.Data.ApplicationDbContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Create</PageTitle>

<h1>Create</h1>

<h2>Usuarios</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <EditForm method="post" Model="Usuarios" OnValidSubmit="AddUsuarios" FormName="create" Enhance>
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" role="alert"/>
            <div class="mb-3">
                <label for="nome" class="form-label">Nome:</label> 
                <InputText id="nome" @bind-Value="Usuarios.Nome" class="form-control" /> 
                <ValidationMessage For="() => Usuarios.Nome" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="email" class="form-label">Email:</label> 
                <InputText id="email" @bind-Value="Usuarios.Email" class="form-control" /> 
                <ValidationMessage For="() => Usuarios.Email" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="createdat" class="form-label">CreatedAt:</label> 
                <InputDate id="createdat" @bind-Value="Usuarios.CreatedAt" class="form-control" /> 
                <ValidationMessage For="() => Usuarios.CreatedAt" class="text-danger" /> 
            </div>        
            <div class="mb-3">
                <label for="updatedat" class="form-label">UpdatedAt:</label> 
                <InputDate id="updatedat" @bind-Value="Usuarios.UpdatedAt" class="form-control" /> 
                <ValidationMessage For="() => Usuarios.UpdatedAt" class="text-danger" /> 
            </div>        
            <button type="submit" class="btn btn-primary">Create</button>
        </EditForm>
    </div>
</div>

<div>
    <a href="/usuarios">Back to List</a>
</div>

@code {
    [SupplyParameterFromForm]
    private Usuarios Usuarios { get; set; } = new();

    // To protect from overposting attacks, see https://learn.microsoft.com/aspnet/core/blazor/forms/#mitigate-overposting-attacks.
    private async Task AddUsuarios()
    {
        using var context = DbFactory.CreateDbContext();
        context.Usuarios.Add(Usuarios);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/usuarios");
    }
}
